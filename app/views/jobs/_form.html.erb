<% if @job.errors.full_messages.any? %>
  <p> Não foi possível salvar, verifique os erros abaixo: </p>
  <ul>
    <% @job.errors.full_messages.each do |j|%>
      <li><%= j %></li>
    <%end%>
  </ul>
<% end %>

<%= form_for(@job) do |j| %>

    <%= j.label :title %>
    <%= j.text_field(:title) %>

    <%= j.label :description %>
    <%= j.text_field(:description) %>

    <%= j.label :level %>
    <%= j.text_field(:level) %>

    <%= j.label :skills %>
    <%= j.text_field(:skills) %>

    <%= j.label :salary %>
    <%= j.text_field(:salary) %>

    <%= j.label :application_deadline%>
    <%= j.text_field(:application_deadline) %>

    <%= j.label :location %>
    <%= j.text_field(:location) %>

    <%= j.submit('Enviar') %>
<% end %>
